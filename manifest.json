{
  "name": "JSA URL Shortener",
  "version": "0.0.2",
  "description": "Shorten URLs without leaving your tabs",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "homepage_url": "http://jsa.life",
  "offline_enabled": false
}
